<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MauiAppHotel.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MauiAppHotel"  
    Shell.FlyoutBehavior="Disabled"
    Title="MauiAppHotel"
    Shell.BackgroundColor="#4CAF50"
    Shell.ForegroundColor="White">

    <TabBar>
        <ShellContent
            Title="Reserva" 
            Icon="house.png" 
            ContentTemplate="{DataTemplate local:ContratacaoHospedagem}" Route="ContratacaoHospedagem" />

        <ShellContent
            Title="Sobre"
            Icon="info.png"
            ContentTemplate="{DataTemplate local:SobrePage}"
            Route="SobrePage" />
    </TabBar>

</Shell>